</div>

<script type="text/javascript">
  var prev = null;
  var score = 0;
  var interval = 1000;

  setInterval(function(){
    clearBtn(prev);
    prev = getRandom(0,63);
    markBtn(prev);
  }, 1550);

  $(".btn-sq").click(function(){
    if($(this).hasClass("btn-success")){
      score += 1;
      unmaskEntity(score);
    }
  });
</script>
