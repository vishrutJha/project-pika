<div class="col-md-12 col-sm-12">
  <% 64.times do |i| %>
    <%= "<br/>".html_safe if i%8 == 0 %>
    <div class="btn btn-outline-success btn-sq" id="sq_<%= i %>" style="margin-left: 10px; margin-right: 10px;"><%= "PIKA".split(//)[rand(0..3)] %></div>
  <% end %>
</div>

